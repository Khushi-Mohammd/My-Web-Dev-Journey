<!-- Declaring the document type as HTML -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Setting the character encoding to UTF-8 for supporting various characters -->
    <meta charset="UTF-8" />

    <!-- Ensuring proper rendering and responsiveness on different screen sizes -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Setting the title of the webpage -->
    <title>Home Page</title>
  </head>
  <body>
    <!-- Displaying a heading for the home page -->
    <h1>This is home page</h1>

    <!-- EJS Syntax: Evaluating expressions and embedding them into HTML dynamically -->
    <h3><%= 1 + 2 %></h3>
    <!-- Evaluates 1 + 2 and displays the result (3) -->
    <h3><%= "apnacollege".toUpperCase() %></h3>
    <!-- Converts 'apnacollege' to uppercase and displays 'APNACOLLEGE' -->
    <h3><%= ["hello", "bonjour", "namaste"][2] %></h3>
    <!-- Accesses index 2 from an array and displays 'namaste' -->

    <!-- A sample paragraph with placeholder text -->
    <p>
      Lorem, ipsum dolor sit amet consectetur adipisicing elit. Quibusdam
      molestias earum cupiditate ad veniam, voluptatibus quae voluptas
      perferendis sequi ipsa nostrum amet recusandae itaque optio ullam delectus
      sapiente eaque velit.
    </p>

    <!-- A button element for interaction -->
    <button>click me</button>
  </body>
</html>
